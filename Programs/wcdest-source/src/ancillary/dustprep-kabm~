#!/bin/bash
B=`basename $1 .fa`
ORIG=$1
shift

cat > /tmp/alpha <<EOF
B
H
D
R
A
C
G
T
X
S
K
Y
V
M
W
N
b
h
d
r
a
c
g
t
x
s
k
y
v
m
w
n
EOF


F=${B}_fwd.fa
A=${B}_all.fa


echo Dusting mdust ${ORIG} -m X 
mdust ${ORIG} -m X > ${F} 
echo Creating all
wcd -y ${A} ${F}


echo "Making ESA"
mkesa -p $A -w 64 -a /tmp/alpha -g ois -d ${A}

echo "Calling wcd"
wcd --kabm $@ ${A} 
